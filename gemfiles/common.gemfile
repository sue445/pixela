if Gem::Version.create(RUBY_VERSION) < Gem::Version.create("2.7.0")
  # unparser v0.6.5+ requires ruby 2.7.0+
  gem "unparser", "< 0.6.5"
end

if Gem::Version.create(RUBY_VERSION) < Gem::Version.create("2.7.0")
  # term-ansicolor 1.9.0+ doesn't work on Ruby < 2.7
  gem "term-ansicolor", "< 1.9.0"
end
